@model IEnumerable<Atividade2.Models.Treino>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonalID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno)
            </th>
            <th>Exercícios</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Personal.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aluno.Nome)
            </td>
            <td>
                @{
                    foreach (var exercicio in item.Exercicios)
                    {
                        @exercicio.ExercicioID @:  @exercicio.Nome <br />
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TreinoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TreinoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TreinoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
