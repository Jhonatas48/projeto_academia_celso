@model Atividade2.Models.Treino

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TreinoID" />
            <div class="form-group">
                <label asp-for="PersonalID" class="control-label">Personal</label>
                <select asp-for="PersonalID" class="form-control" asp-items="ViewBag.PersonalID"></select>
                <span asp-validation-for="PersonalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoID" class="control-label">Aluno</label>
                <select asp-for="AlunoID" class="form-control" asp-items="ViewBag.AlunoID"></select>
                <span asp-validation-for="AlunoID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<Atividade2.ViewModels.DadosExerciciosDisponiveis> exercicios = ViewBag.Exercicios;

                                foreach (var exercicio in exercicios)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                            name="exerciciosSelecionados"
                                            value="@exercicio.ExercicioID"
                                            @(Html.Raw(exercicio.Incluido ? "checked=\"checked\"" : "")) />
                                            @exercicio.ExercicioID @:  @exercicio.Nome
                                    @:</td>
                                }
                                @:</tr>
                            }
                        </tr>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
